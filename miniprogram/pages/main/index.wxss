/**index.wxss**/

/* Nav Styles */
.nav {
  position: sticky;
  background: white;
  color: #353535;
  z-index: 999999;
  max-height: 94rpx;
  width: 100%;
  box-shadow: 0px 1px 6px 0px rgba(0, 0, 0, 0.1);
}

.flex {
  display: flex;
  text-align: center;
}

.nav .nav-item.current {
  border-bottom: 4rpx solid;
}

.text-selected {
  color: #2196F3;
  font-size: 34rpx;
}

.nav .nav-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
  transition: all 0.3s ease;
}

/* Item Container Styles */
.item-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0px 1px 6px 0px rgba(0, 0, 0, 0.1);
  padding: 0px;
  margin: 10px;
  background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
  height: 200px; /* Set a height for the item-container */
  width: calc(100vw - 20px); /* Set the width to be the viewport width minus some margin */
  background-size: cover;
  background-position: center;
}

.item-title {
  position: absolute;
  z-index: 1;
  bottom: 10px; /* Place the text at the bottom of the image */
  font-size: 16px; 
  text-align: center;
  color: #fff; /* Set the text color to white for visibility */
  width: 100%;
  background: rgba(0, 0, 0, 0.6); /* Add a semi-transparent background */
  padding: 5px 0; /* Add some padding */
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text shadow for better readability */
}
